<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username, "Gebruikersnaam" %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "Email" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Paswoord" %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Paswoord Confirmatie" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Aanmaken" %></p>
<% end %>
